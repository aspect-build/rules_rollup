load("@bazel_skylib//rules:write_file.bzl", "write_file")
load("@aspect_rules_rollup//rollup:rollup_bundle.bzl", "rollup_bundle")

write_file(
    name = "gen",
    out = "gen.js",
    content = ["console.log('foo')"],
)

rollup_bundle(
    name = "from_js",
    config_file = "rollup.config.js",
    deps = ["gen"],
    entry_points = {
        "gen.js": "index",
    },
    output_dir = True,
)

rollup_bundle(
    name = "from_ts",
    config_file = "rollup.config.js",
    deps = ["gen"],
    entry_points = {
        "gen.ts": "index",
    },
)
